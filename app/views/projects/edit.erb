


<h1>Edit Project</h1>
<br>

<form action='/projects/<%= @project.id %>' method='post'>
    <input type='hidden' name='_method' value='patch'>

    Project Name: <input type='text' name='name' value='<%= @project.name %>'>
    <br>
    <br>
    Project Scope: <input type='text' name='project_scope' value='<%= @project.project_scope %>'> 
    <br>
    <br>
    Project Total Cost: <input type='text' name='total_cost' value='<%= @project.total_cost %>'>
    <br>
    <br>
    Project Subcontractor Cost: <input type='text' name='sub_cost' value='<%= @project.sub_cost %>'>
    <br>
    <br>
    Project Subcontractors: <input type='text' name='subcontractors' value='<%= @project.subcontractors %>'>
    <br>
    <br>
    Project Status: <input type='text' name='status' value='<%= @project.status %>'>
    <br>
    <br>
    Project Billing Status: <input type='text' name='billing_status' value='<%= @project.billing_status %>'>
    <br>
    <br>
    <input type='submit' value='submit changes'>

</form>




